<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:padding="10dp"
        android:layout_gravity="end" />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="60sp"
        android:padding="10dp"
        android:layout_gravity="end" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">

        <!-- First Row -->
        <Button android:id="@+id/btn_clear" android:text="C" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="0" android:layout_column="0" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_backspace" android:text="&lt;=" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="0" android:layout_column="1" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_percentage" android:text="%" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="0" android:layout_column="2" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_divide" android:text="/" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="0" android:layout_column="3" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>

        <!-- Second Row -->
        <Button android:id="@+id/btn_7" android:text="7" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="1" android:layout_column="0" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_8" android:text="8" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="1" android:layout_column="1" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_9" android:text="9" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="1" android:layout_column="2" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_multiply" android:text="*" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="1" android:layout_column="3" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>

        <!-- Third Row -->
        <Button android:id="@+id/btn_4" android:text="4" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="2" android:layout_column="0" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_5" android:text="5" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="2" android:layout_column="1" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_6" android:text="6" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="2" android:layout_column="2" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_plus" android:text="+" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="2" android:layout_column="3" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>

        <!-- Fourth Row -->
        <Button android:id="@+id/btn_1" android:text="1" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="3" android:layout_column="0" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_2" android:text="2" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="3" android:layout_column="1" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_3" android:text="3" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="3" android:layout_column="2" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_subtract" android:text="-" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="3" android:layout_column="3" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>

        <!-- Fifth Row -->
        <Button android:id="@+id/btn_dot" android:text="." android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="4" android:layout_column="0" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_0" android:text="0" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="4" android:layout_column="1" android:layout_columnWeight="1" android:textSize="24sp" android:background="@drawable/button_background"/>
        <Button android:id="@+id/btn_equals" android:text="=" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="3dp" android:layout_row="4" android:layout_column="2" android:layout_columnSpan="2" android:layout_columnWeight="2" android:textSize="24sp" android:background="@drawable/button_background"/>
    </GridLayout>
</LinearLayout>
